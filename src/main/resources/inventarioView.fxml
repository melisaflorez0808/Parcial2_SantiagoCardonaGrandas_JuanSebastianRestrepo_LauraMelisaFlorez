<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.SOLID.Controlador.InventarioController">
  <padding>
    <Insets topRightBottomLeft="10.0" />
  </padding>
  <children>
    <Label text="Registrar Entrada de Inventario" />
    <HBox spacing="10.0">
      <children>
        <Label minWidth="120.0" text="Proveedor:" />
        <ComboBox fx:id="cmbProveedores" prefWidth="250.0" promptText="Seleccione un proveedor" />
        <Button onAction="#mostrarCrearProveedor" text="Nuevo Proveedor" />
      </children>
    </HBox>

    <TitledPane fx:id="tpCrearProveedor" expanded="false" text="Proveedor">
      <content>
        <VBox spacing="8.0">
          <padding>
            <Insets topRightBottomLeft="10.0" />
          </padding>
          <children>
            <TextField fx:id="txtProvNit" promptText="NIT" />
            <TextField fx:id="txtProvNombre" promptText="Nombre" />
            <TextField fx:id="txtProvContacto" promptText="Contacto" />
            <TextField fx:id="txtProvEmail" promptText="Email" />
            <TextField fx:id="txtProvTelefono" promptText="TelÃ©fono" />
            <HBox spacing="8.0">
              <children>
                <Button onAction="#crearProveedor" text="Crear" />
                <Button onAction="#actualizarProveedor" text="Actualizar" />
                <Button onAction="#eliminarProveedor" text="Eliminar" />
                <Button fx:id="btnActivar" onAction="#activarProveedor" text="Activar" />
                <Button fx:id="btnInactivar" onAction="#inactivarProveedor" text="Inactivar" />
              </children>
            </HBox>
          </children>
        </VBox>
      </content>
    </TitledPane>

    <HBox spacing="10.0">
      <children>
        <Label minWidth="120.0" text="Producto:" />
        <ComboBox fx:id="cmbProductoEntrada" prefWidth="250.0" />
        <Label text="Cantidad:" />
        <Spinner fx:id="spnCantidadEntrada" prefWidth="80.0" />
        <Button onAction="#confirmarEntradaInventario" text="Confirmar Entrada" />
      </children>
    </HBox>
    <Label fx:id="lblResultadoEntrada" text="" />
      <Button fx:id="btnInventario" mnemonicParsing="false" onAction="#actualizarInventario" text="Actualizar Estado Inventario" />
      <Label fx:id="lblMensaje" prefHeight="18.0" prefWidth="261.0" />

    <TitledPane expanded="true" text="Productos en Inventario">
      <content>
        <TableView fx:id="tblProductosInv" prefHeight="260.0">
          <columns>
            <TableColumn fx:id="colInvSku" prefWidth="140.0" text="SKU" />
            <TableColumn fx:id="colInvNombre" prefWidth="260.0" text="Producto" />
            <TableColumn fx:id="colInvPrecio" prefWidth="140.0" text="Precio" />
            <TableColumn fx:id="colInvStock" prefWidth="120.0" text="Stock" />
          </columns>
        </TableView>
      </content>
    </TitledPane>
      <Label text="Label" />
  </children>
</VBox>
