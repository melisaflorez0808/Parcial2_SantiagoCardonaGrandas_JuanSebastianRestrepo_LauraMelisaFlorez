<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.SOLID.Controlador.PedidoController">
   <center>
      <TabPane>
         <tabs>
            <Tab text="Gestión de Pedidos" closable="false">
               <content>
                  <ScrollPane fitToWidth="true" fitToHeight="true">
                     <content>
                        <VBox spacing="10.0">
                           <children>
                  <!-- Cliente -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Cliente:" minWidth="120.0" />
                        <ComboBox fx:id="cmbClientes" prefWidth="350.0" promptText="Seleccione un cliente" />
                        <Button onAction="#gestionarClientes" text="Gestionar Clientes" />
                     </children>
                  </HBox>
                  
                  <!-- Productos -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Producto:" minWidth="120.0" />
                        <ComboBox fx:id="cmbProductos" prefWidth="250.0" promptText="Seleccione un producto" />
                        <Button onAction="#gestionarProductos" text="Gestionar Productos" />
                        <Label text="Cantidad:" />
                        <Spinner fx:id="spnCantidad" prefWidth="80.0" />
                        <Button onAction="#agregarItem" text="Agregar" />
                     </children>
                  </HBox>
                  
                  <!-- Tabla de Items -->
                  <TableView fx:id="tblItemsPedido" prefHeight="300.0">
                     <columns>
                        <TableColumn fx:id="colProducto" prefWidth="250.0" text="Producto" />
                        <TableColumn fx:id="colCantidad" prefWidth="100.0" text="Cantidad" />
                        <TableColumn fx:id="colPrecio" prefWidth="120.0" text="Precio Unit." />
                        <TableColumn fx:id="colSubtotal" prefWidth="120.0" text="Subtotal" />
                     </columns>
                  </TableView>
                  <Button onAction="#eliminarItem" text="Eliminar Item Seleccionado" />
                  
                  <!-- Información Adicional -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Dirección:" minWidth="120.0" />
                        <TextField fx:id="txtDireccionEnvio" prefWidth="500.0" promptText="Ingrese la dirección de envío" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Notas:" minWidth="120.0" />
                        <TextArea fx:id="txtNotas" prefHeight="60.0" prefWidth="500.0" promptText="Notas adicionales" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Descuento:" minWidth="120.0" />
                        <TextField fx:id="txtCodigoDescuento" prefWidth="200.0" promptText="Código de descuento" />
                     </children>
                  </HBox>
                  
                  <!-- Configuración -->
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Método de Pago:" />
                              <ComboBox fx:id="cmbMetodoPago" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Tipo de Envío:" />
                              <ComboBox fx:id="cmbTipoEnvio" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Notificación:" />
                              <ComboBox fx:id="cmbTipoNotificacion" prefWidth="150.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Totales -->
                  <HBox spacing="30.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Subtotal:" />
                              <Label fx:id="lblSubtotal" text="0.00" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Costo de Envío:" />
                              <Label fx:id="lblCostoEnvio" text="0.00" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Total:" />
                              <Label fx:id="lblTotal" text="0.00" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Botones -->
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button onAction="#procesarPedido" prefHeight="40.0" prefWidth="150.0" text="Procesar Pedido" />
                        <Button onAction="#limpiarFormulario" prefHeight="40.0" prefWidth="150.0" text="Limpiar" />
                     </children>
                  </HBox>
                  
                  <!-- Resultado -->
                  <TextArea fx:id="txtResultado" editable="false" prefHeight="100.0" promptText="Resultado del procesamiento" />
                          </children>
                          <padding>
                             <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                          </padding>
                       </VBox>
                    </content>
                  </ScrollPane>
               </content>
            </Tab>

            <Tab text="Gestión de Inventarios" closable="false">
               <content>
                  <fx:include source="/inventarioView.fxml" />
               </content>
            </Tab>

            <Tab text="Empleados" closable="false">
               <content>
                  <fx:include source="/empleadosView.fxml" />
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>